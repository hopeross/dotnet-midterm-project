@model IEnumerable<midterm_project.Models.Pet>

@{
    ViewData["Title"] = "Available Pets";

}

<div>
    <h1>Available Pets</h1>
    <div><a asp-controller="Pet" asp-action="Add">New Pet</a></div>

    @foreach (var pet in Model ?? new List<Pet>())
    {
        <div>
            <p><img src="@pet.PetURL"></p>
            <p>@pet.PetName</p>
            <p>@pet.PetBreed</p>
            <p>@pet.PetColor, @pet.PetAge</p>
            <p>@pet.PetDescription</p>
            <p>@pet.PetSize</p>
            <div class="col-12">
                <a asp-controller="Pet" asp-action="Detail" asp-route-id="@pet.PetId">View Pet</a>
                <a asp-controller="Pet" asp-action="Edit" asp-route-id="@pet.PetId">Edit Pet</a>
                <a asp-controller="Pet" asp-action="Delete" asp-route-id="@pet.PetId">Delete Pet</a>
            </div>
        </div>
    }
</div>