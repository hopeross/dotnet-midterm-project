@model IEnumerable<midterm_project.Models.Pet>

@{
    ViewData["Title"] = "Available Pets";

}

<div>
    <h1>Available Pets</h1>
    <div class="soloButton"><a class="btn btn-primary float-end" asp-controller="Pet" asp-action="Add">New Pet</a></div>
</div>

    <div class="container">
        @foreach (var pet in Model ?? new List<Pet>())
        {
            <div class="myCard">
                <img class="myCard-image" src="@pet.PetURL">
                <div class="myCard-body">
                    <p class="myCard-title">@pet.PetName</p>
                    <p class="myCard-subtitle">@pet.PetBreed</p>
                    <div class="myCard-buttons">
                        <a class="btn btn-primary" asp-controller="Pet" asp-action="Detail" asp-route-id="@pet.PetId">View
                            Pet</a>
                        <a class="btn btn-primary" asp-controller="Pet" asp-action="Edit" asp-route-id="@pet.PetId">Edit
                            Pet</a>
                        <a class="btn btn-danger" asp-controller="Pet" asp-action="Delete" asp-route-id="@pet.PetId">Delete
                            Pet</a>
                    </div>
                </div>
            </div>
        }
    </div>
