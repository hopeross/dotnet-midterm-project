@model IEnumerable<midterm_project.Models.Pet>

@{
    ViewData["Title"] = "Available Pets";

}

<div>
    <h1>Available Pets</h1>
    <div><a asp-controller="Pet" asp-action="Add">New Pet</a></div>

    @foreach (var pet in Model ?? new List<Pet>())
    {
        <div>
            <p>@pet.PetName</p>
            <p>@pet.PetBreed</p>
            <p>@pet.PetColor, @pet.PetAge</p>
            <p>@pet.PetDescription</p>
            <p>@pet.PetSize</p>
            <p><a href=@pet.PetURL></a></p>
        </div>
        <div class="col-12">
            <a class="btn btn-sm btn-secondary mb-3 ml-3 float-end" asp-controller="Pet" asp-action="Delete"
            asp-route-id="@pet.PetId">
                Bye Friend!
            </a>
            <a class="btn btn-sm btn-light mb-3 float-end" asp-controller="Pet" asp-action="Detail"
            asp-route-id="@pet.PetId">
                Update Friend
            </a>
        </div>
    }
</div>