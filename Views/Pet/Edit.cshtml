@model midterm_project.Models.Pet

@{
    ViewData["Title"] = "Edit Pet";
}

<div class="formContainer">
    <form asp-controller="Pet" asp-action="Edit" method="post">
        <h1>Edit Pet</h1>
        @await Html.PartialAsync("_PetInput", Model)
        <input type="hidden" asp-for="PetId" />
        <div>
            <a class="btn btn-light" asp-controller="Pet" asp-action="List">Back</a>
            <a class="btn btn-danger" asp-cntroller="Pet" asp-action="Delete" asp-route-id="@Model?.PetId">Delete</a>
            <input type="submit" class="btn btn-primary float-end" value="Save">
        </div>
    </form>
</div>